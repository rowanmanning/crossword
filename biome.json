{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["./node_modules/@rowanmanning/biome-config/config.json"],
	"files": {
		"ignore": ["build", "data/**/*.json", "resources", "themes/**/*.json"]
	},
	"linter": {
		"rules": {
			"performance": {
				"useTopLevelRegex": "off"
			},
			"suspicious": {
				"noConsole": "off"
			}
		}
	}
}
